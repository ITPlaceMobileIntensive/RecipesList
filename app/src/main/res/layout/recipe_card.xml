<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/buy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_light">

        <TextView
            android:id="@+id/name"
            android:layout_marginLeft="@dimen/bottomMarginLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/buyTop"
            android:layout_marginBottom="@dimen/buyTop"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:lineSpacingExtra="4sp"
            tools:text="Название"
            />

        <TextView
            android:id="@+id/ingredients"
            android:layout_marginLeft="@dimen/bottomMarginLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/buyTop"
            android:layout_marginBottom="@dimen/buyTop"
            android:textSize="@dimen/ingredients_size"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:lineSpacingExtra="4sp"
            tools:text="Ингредиенты:"
            android:layout_below="@+id/name"
            />

        <ImageView
            android:id="@+id/pic"
            android:layout_width="@dimen/picWidth"
            android:layout_height="@dimen/picWidth"
            android:layout_marginTop="@dimen/buyTop"
            android:layout_marginBottom="@dimen/buyTop"
            android:layout_marginRight="16dp"
            android:src="@drawable/pic"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp" />

    </RelativeLayout>


</android.support.v7.widget.CardView>