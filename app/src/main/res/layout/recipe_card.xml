<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorFon">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/buyTop"
            android:layout_marginTop="@dimen/buyTop"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="@dimen/lineSpacingExtra"
            android:textSize="@dimen/name_size"
            android:textStyle="bold"
            android:layout_toLeftOf="@+id/pic"
            android:layout_alignParentLeft="true"
            android:layout_marginEnd="@dimen/ingredients_layout_marginEnd"
            android:layout_marginStart="@dimen/bottomMarginLeft"
            tools:text="@string/name" />

        <TextView
            android:id="@+id/ingredients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/buyTop"
            android:layout_marginTop="@dimen/buyTop"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="@dimen/lineSpacingExtra"
            android:textSize="@dimen/ingredients_size"
            android:textStyle="normal"
            tools:text="@string/ingredients"
            android:layout_below="@+id/name"
            android:layout_marginEnd="@dimen/ingredients_layout_marginEnd"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="@dimen/bottomMarginLeft"
            android:layout_toLeftOf="@+id/pic" />

        <ImageView
            android:id="@+id/pic"
            android:layout_width="@dimen/picWidth"
            android:layout_height="@dimen/picWidth"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/buyTop"
            android:layout_marginEnd="@dimen/pic_layout_marginEnd"
            android:layout_marginTop="@dimen/buyTop"
            android:contentDescription="@string/name"
            android:src="@drawable/pic" />

    </RelativeLayout>


</android.support.v7.widget.CardView>